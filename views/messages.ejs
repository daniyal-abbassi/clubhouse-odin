
<div class="posts-container">
    <%if(messages&&messages.length>0) {%>
        <% messages.forEach(message=>{%>
            <div class="post">
                <section class="post-username">
                    <p class="username">Posted by: </p>
                <%if(user) {%>
                    <span><%=message.username%> </span> at <small><%=message.written_at%></small>

                <%} else {%>
                    <p class="no-username">(log in to see details)</p>
                </section>
                <%}%>
                <section class="post-text">
                    <p><%=message.text%></p>
                </section>
            </div>
            <%})%>
            <%} else {%>
                <div class="no-post">
                    <p>No Posts Yet!</p>
                </div>
        <%}%>
    
</div>

